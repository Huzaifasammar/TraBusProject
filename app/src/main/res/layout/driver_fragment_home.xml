<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/silver"
    android:layout_height="match_parent"
    tools:context=".Driver_Navigation_fragment.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:id="@+id/Rl_strtroute"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/travel"
            android:id="@+id/strtroute" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Location"
            android:textColor="@color/black"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@id/strtroute"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:id="@+id/RL_Maintanace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Rl_Scehdule"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/tools"
            android:id="@+id/maintanace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maintanance"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"
            android:layout_below="@id/maintanace"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:id="@+id/Rl_Scehdule"
        android:layout_below="@id/Rl_strtroute"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/bus_schedule"
            android:id="@+id/schedule" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Schedule"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:textColor="@color/black"
            android:layout_below="@id/schedule"
            android:textSize="24sp"
            android:gravity="center"/>
    </RelativeLayout>


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>