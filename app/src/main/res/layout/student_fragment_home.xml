<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".Student_Navigation_fragments.Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/Rl_livetracking"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/travel"
            android:id="@+id/view_route" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Tracking"
            android:textColor="@color/black"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@id/view_route"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/Rl_bus_schedule"
        android:layout_below="@id/Rl_livetracking"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/bus_schedule"
            android:id="@+id/bus_schedule" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buses Schedule"
            android:textColor="@color/black"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@id/bus_schedule"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/Rl_booking"
        android:layout_below="@id/Rl_bus_schedule"
        android:background="@drawable/rounder_white_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/ic_booking"
            android:id="@+id/trip_booking" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking For Trips"
            android:textColor="@color/black"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@id/trip_booking"
            android:textSize="24sp"
            />
    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>