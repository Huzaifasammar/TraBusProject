<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Rl_bottom_sheet1"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/white">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bus"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/img_bus"
            app:tint="@color/Green">
        </ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bus No# 34"
            android:textColor="@color/Green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tv_busno1"
            android:layout_toEndOf="@+id/img_bus"
            ></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="3500 PKR"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:layout_alignParentRight="true"></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:text="4/5/2021"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_busno1"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/tv_date"
            android:layout_alignParentLeft="true"></TextView>

    </RelativeLayout>
</RelativeLayout>