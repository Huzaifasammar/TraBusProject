<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/driversample"
    android:background="@color/Green">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/driver_image_nav"
        android:src="@drawable/ic_driver"

        />
    <TextView
        android:layout_below="@+id/driver_image_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_name_nav"
        android:text="Muhammad Huzaifa Sammar"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    />

    <TextView
        android:id="@+id/driver_bus_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus No 3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:padding="5dp"
        android:layout_below="@id/driver_name_nav"/>


</RelativeLayout>